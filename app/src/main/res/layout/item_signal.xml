<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Unread Indicator Dot -->
        <View
            android:id="@+id/view_unread_indicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/primary"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Market & Symbol -->
        <TextView
            android:id="@+id/text_symbol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ’° BTCUSDT"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            tools:text="ðŸ’° BTCUSDT"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_favorite"/>

        <!-- Favorite Button -->
        <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_favorite_border"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/favorite"
            app:tint="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Signal Type Badge -->
        <TextView
            android:id="@+id/text_signal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LONG"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/bg_signal_badge_long"
            android:layout_marginTop="10dp"
            tools:text="LONG"
            app:layout_constraintTop_toBottomOf="@id/text_symbol"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Strategy Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75-80%"
            android:textSize="11sp"
            android:layout_marginStart="8dp"
            style="@style/Widget.Material3.Chip.Assist"
            tools:text="75-80%"
            app:layout_constraintTop_toTopOf="@id/text_signal_type"
            app:layout_constraintBottom_toBottomOf="@id/text_signal_type"
            app:layout_constraintStart_toEndOf="@id/text_signal_type"/>

        <!-- Timeframe Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_timeframe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5m"
            android:textSize="10sp"
            style="@style/Widget.Material3.Chip.Assist.Elevated"
            tools:text="5m"
            app:layout_constraintTop_toTopOf="@id/text_signal_type"
            app:layout_constraintBottom_toBottomOf="@id/text_signal_type"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Price & Profit -->
        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$45,234.56"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="12dp"
            tools:text="$45,234.56"
            app:layout_constraintTop_toBottomOf="@id/text_signal_type"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_profit_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2.5%"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/signal_long"
            android:layout_marginStart="12dp"
            tools:text="+2.5%"
            app:layout_constraintTop_toTopOf="@id/text_price"
            app:layout_constraintBottom_toBottomOf="@id/text_price"
            app:layout_constraintStart_toEndOf="@id/text_price"/>

        <!-- Strategy Name -->
        <TextView
            android:id="@+id/text_strategy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SuperTrend MA"
            android:textSize="13sp"
            android:alpha="0.7"
            android:layout_marginTop="6dp"
            tools:text="SuperTrend MA"
            app:layout_constraintTop_toBottomOf="@id/text_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_risk_reward"/>

        <!-- Risk Reward Ratio -->
        <TextView
            android:id="@+id/text_risk_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R:R 1:3.5"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            tools:text="R:R 1:3.5"
            app:layout_constraintTop_toTopOf="@id/text_strategy"
            app:layout_constraintBottom_toBottomOf="@id/text_strategy"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/text_strategy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- TP and SL Section -->
        <LinearLayout
            android:id="@+id/tp_sl_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/text_take_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TP1: $46,500.00"
                android:textSize="14sp"
                android:textColor="@color/signal_long"
                android:drawableStart="@drawable/ic_arrow_up"
                android:drawablePadding="6dp"
                android:drawableTint="@color/signal_long"
                tools:text="TP1: $46,500.00"/>

            <TextView
                android:id="@+id/text_stop_loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SL: $44,200.00"
                android:textSize="14sp"
                android:textColor="@color/signal_short"
                android:drawableStart="@drawable/ic_arrow_down"
                android:drawablePadding="6dp"
                android:drawableTint="@color/signal_short"
                android:layout_marginTop="4dp"
                tools:text="SL: $44,200.00"/>
        </LinearLayout>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/text_timestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2 hours ago"
            android:textSize="12sp"
            android:alpha="0.5"
            android:layout_marginTop="10dp"
            tools:text="2 hours ago"
            app:layout_constraintTop_toBottomOf="@id/tp_sl_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_follow_signal"/>

        <!-- Follow Signal Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_follow_signal"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Follow Signal"
            android:textSize="12sp"
            style="@style/Widget.Material3.Button.TonalButton"
            app:icon="@drawable/ic_notification"
            app:iconSize="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:layout_constraintTop_toTopOf="@id/text_timestamp"
            app:layout_constraintBottom_toBottomOf="@id/text_timestamp"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>